<button class="btn btn-primary mb-4" @onclick="OnCrea"> Crea Evento </button>
<table class="table">
    <thead>
    <th>Id</th>
    <th>Nome</th>
    <th>Localit√†</th>
    <th>Data</th>
    <th></th>
    </thead>
    <tbody>
        @foreach (var evento in ElementiLista)
        {
            <tr>
                <td>@evento.Id</td>
                <td>@evento.Nome</td>
                <td>@evento.Localita</td>
                <td>@evento.Data</td>
                <th>
                    <button class="btn btn-warning"
                        @onclick="e => OnModifica.InvokeAsync(evento)">
                        Modifica
                    </button>
                    <button class="btn btn-danger"
                        @onclick="e => OnElimina.InvokeAsync(evento)">
                        Elimina
                    </button>
                </th>
            </tr>
        }
    </tbody>
</table>

@code {
    [Parameter]
    public List<ElementoListaEvento> ElementiLista { get; set; }

    [Parameter]
    public EventCallback OnCrea { get; set; }

    [Parameter]
    public EventCallback<ElementoListaEvento> OnModifica { get; set; }

    [Parameter]
    public EventCallback<ElementoListaEvento> OnElimina { get; set; }
}